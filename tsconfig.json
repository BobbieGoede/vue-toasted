{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "esnext",
		"moduleResolution": "node",
		"noUncheckedIndexedAccess": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"rootDirs": ["src"],
		"typeRoots": ["./src/types"]
	},
	"include": ["src/**/*"]
}
