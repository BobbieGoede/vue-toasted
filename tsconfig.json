{
	"compilerOptions": {
		"jsx": "preserve",
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "node",
		"sourceMap": true,
		"declaration": true,
		"declarationDir": "./types",
		"declarationMap": true,
		"noUncheckedIndexedAccess": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"rootDirs": ["src"],
		"typeRoots": ["./src/types"]
	},
	"include": ["src/**/*", "modules"]
}
